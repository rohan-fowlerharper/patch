{
  "name": "patch",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "node server",
    "dev": "nodemon server",
    "preview": "NODE_ENV=development npm run build && NODE_ENV=production node server",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "npm run db:migrate",
    "db:migrate": "npm run knex migrate:latest",
    "db:migrate:make": "npm run knex migrate:make -- -x mjs",
    "db:seed": "npm run knex seed:run",
    "db:seed:make": "npm run knex seed:make -- -x mjs",
    "db:rollback": "npm run knex migrate:rollback",
    "db:reset:dev": "rm -f server/db/dev.sqlite3 && npm run db:migrate && npm run db:seed",
    "knex": "knex --knexfile server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^7.5.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "knex": "^2.1.0",
    "react-router-dom": "^6.3.0",
    "superagent": "^8.0.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.9",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vitest-globals": "^1.1.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "nock": "^13.2.7",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "supertest": "^6.2.3",
    "tailwindcss": "^3.1.8",
    "vite": "^3.0.3",
    "vitest": "^0.16.0"
  }
}
